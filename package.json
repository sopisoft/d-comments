{
  "name": "d-comments",
  "description": "Player addon for d-anime",
  "version": "2023.3.23",
  "private": true,
  "license": "GPL-3.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/gobosan/d-comments.git"
  },
  "engines": {
    "node": ">=18.15.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "zip": "@powershell Compress-Archive -Path dist -DestinationPath dist.zip",
    "preview": "npm run build && vite preview",
    "clean:dist": " @powershell Remove-Item -Recurse -Force dist",
    "clean:zip": "@powershell Remove-Item -Recurse -Force dist.zip",
    "format": "rome format src public --write ",
    "lint": "rome check src public --apply-suggested",
    "rome": "rome ci src public"
  },
  "dependencies": {
    "@solidjs/router": "^0.8.1",
    "@vscode/codicons": "^0.0.32",
    "solid-js": "^1.6.15"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.15",
    "@types/chrome": "0.0.218",
    "@types/node": "^18.15.5",
    "babel-preset-solid": "^1.6.13",
    "rome": "^11.0.0",
    "sass": "^1.59.3",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vite-plugin-solid": "^2.6.1"
  }
}
